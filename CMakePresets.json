{
    "version": 2,
    "configurePresets": [
      {
        "name": "default",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "VCPKG_MANIFEST_INSTALL":false,
          "CMAKE_TOOLCHAIN_FILE": "./vcpkg/scripts/buildsystems/vcpkg.cmake",
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "test",
        "inherits": ["default"],
        "cacheVariables": {
          "TEST": true
        }
      },
      {
        "name": "install",
        "inherits": ["default"],
        "cacheVariables": {
          "VCPKG_MANIFEST_INSTALL":true
        }
      },
      {
        "name": "release",
        "inherits": ["default"],
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "configurePreset": "default",
        "jobs": 4,
        "targets":["seed", "app"]
      },
      {
        "name": "release",
        "inherits":["default"]
      },
      {
        "name": "editor",
        "jobs": 4,
        "configurePreset": "default",
        "targets": ["editor"]
      }
    ]
  }